{
  "name": "atlas-copco-signature-generator",
  "version": "1.1.0",
  "description": "Email signature generator for Atlas Copco",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "keywords": ["email", "signature", "generator", "atlas-copco"],
  "author": "Atlas Copco",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.atlascopco.signature-generator",
    "productName": "Atlas Copco Signature Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "assets/**/*",
      "atlas_copco_signature_be.html"
    ],
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "sign": false,
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-win.${ext}",
      "compression": "maximum"
    },
    "linux": {
      "target": ["AppImage"],
      "artifactName": "${productName}-${version}-linux.${ext}",
      "category": "Utility"
    },
    "extraMetadata": {
      "debug": false
    }
  }
}
